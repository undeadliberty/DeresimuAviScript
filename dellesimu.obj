    end
    if(st>0)then
        local x,y,z,size=GetPosition(st,sts,stg)
        obj.load("figure","円")
        obj.setoption("blend","alpha_sub")
        obj.drawpoly(x-50*size,y-50*size,z,x+50*size,y-50*size,z,x+50*size,y+50*size,z,x-50*size,y+50*size,z)    
